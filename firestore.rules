rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    match /subjects/{subjectId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /subjects/{subjectId}/classes/{classId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /subjects/{subjectId}/classes/{classId}/topics/{topicId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /subjects/{subjectId}/classes/{classId}/topics/{topicId}/quizzes/{quizId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
